@page
@model FizzBuzzWeb.Pages.Forms.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (Model.userId != null)
{
    <p>Login uzytkownika: @Model.applicationUser.Email</p>
    <p>Id użytkownika: @Model.applicationUser.Id</p>
}
<p>
    <a asp-page="Create" hidden>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Form[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form[0].Result)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Form[0].Created)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Form) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Result)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@{
    var prevDisabled = !Model.Form.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.Form.HasNextPage ? "disabled" : "";
}

<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Form.PageIndex - 1)"
   class="btn btn-primary @prevDisabled">
    Previous
</a>
<a asp-page="./Index"
   asp-route-pageIndex="@(Model.Form.PageIndex + 1)"
   class="btn btn-primary @nextDisabled">
    Next
</a>
